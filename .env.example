# Database Configuration
POSTGRES_USER=churchcrm
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=churchcrm

# JWT Secret (generate a secure random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS Origin (use your domain in production, or * for development)
CORS_ORIGIN=*

# Client API URL (use /api when using the reverse proxy)
VITE_API_URL=/api

# Port Configuration
CLIENT_PORT=3000
NGINX_PORT=80

# Frontend Base URL (for password reset emails)
FRONTEND_BASE_URL=https://yourchurch.com

# SMTP Configuration (optional - for password reset emails)
# If not configured, reset tokens will be logged to console
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@yourchurch.com

# Upload Directory for imports (optional)
UPLOAD_DIR=/tmp/uploads
