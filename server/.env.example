# Database URL - PostgreSQL connection string
# Replace with your actual PostgreSQL database credentials
DATABASE_URL="postgresql://username:password@localhost:5432/church_crm?schema=public"

# JWT Secret - Change this in production!
JWT_SECRET="your-super-secret-key-change-in-production"

# Server Port
PORT=3001

# CORS Origin (comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:5173

# Frontend Base URL (for password reset emails)
FRONTEND_BASE_URL=http://localhost:5173

# SMTP Configuration (optional - for password reset emails)
# If not configured, reset tokens will be logged to console
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@yourchurch.com

# Upload Directory (optional - defaults to ./uploads)
UPLOAD_DIR=/tmp/uploads
